@model IEnumerable<Recipes>

@{
    bool isAuthenticated = User.Identity?.IsAuthenticated == true;
}

<head>
    <link rel="stylesheet" href="/css/site.css">
</head>

<section class="space-sm flush-with-above">
    <div class="frame">
        <a class="btn btn-primary" asp-controller="Statements" asp-action="MyStatements">Мої заяви</a>
    </div>
    @if (Model != null && Model.Count() > 0)
    {
        <div class="container">
            <ul class="row feature-list feature-list-sm">
                @foreach (var item in Model)
                {
                    <li class="col-12 col-md-6 col-lg-4" style="list-style-type: none;">
                        <div class="card">
                            <a type="button" asp-controller="Recipes" asp-action="Details" asp-route-id="1">
                                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">@item.Name</h4>
                                <p class="card-text">@item.Description</p>
                            </div>                        
                        </div>
                        <br />
                    </li>
                }
            </ul>
        </div>
    }
</section>