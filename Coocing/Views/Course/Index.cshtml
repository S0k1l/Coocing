@model IEnumerable<Course>

@{
    bool isAuthenticated = User.Identity?.IsAuthenticated == true;
}

<style>
    #myClass {
        color: black;
        text-decoration: none,
    }

    .myClass {
        color: black;
        text-decoration: none,
    }

        .myClass:hover {
            /* put whatever styling you want when someone hovers over the link */
        }
</style>

<section class="space-sm flush-with-above">
    <form asp-action="Index" style="margin-top: 50px; text-align:center">
        <input type="text" class="form-control" style="display: inline-block; width: 500px" name="Name" id="Name" placeholder="Введіть назву для пошуку" />
        <input class="btn btn-primary" type="submit" value="Пошук" style="margin-bottom: 5px; margin-left: 10px" />
    </form><br></br>
    <div class="container">
        <ul class="row feature-list feature-list-sm">
            @foreach (var item in Model)
            {
                <li class="col-12 col-md-6 col-lg-4" style="list-style-type: none;">
                    <div class="card">
                        <div class="card-body">
                            <a type="button" class="myClass" asp-controller="Recipes" asp-action="Details" asp-route-id="@item.Id">
                                <h4 class="card-title">@item.Name</h4>
                                <p class="myClass">@item.Description</p>
                            </a>
                        </div>
                    </div>
                    <br />
                </li>
            }
        </ul>
    </div>
</section>